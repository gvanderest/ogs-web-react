{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "preserveConstEnums": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "suppressExcessPropertyErrors": false,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "checkJs": true
    },
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.tsx?",
        "dist/**/*"
    ],
    "include": [
        "**/*"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ]
}
